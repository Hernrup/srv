#!/bin/bash
set -eo pipefail

# Update swarm cluster id and swarm manager address in kapacitor.conf
preStart() {
    _log "Updating kapactor config"
    # address=`ip r|grep $CONSUL_BIND|awk '{print $NF;exit}'`
    sed -i "s/MANAGER/${MANAGER}/" /etc/kapacitor/kapacitor.conf
    sed -i "s/CLUSTER/lime-${DATACENTER}/" /etc/kapacitor/kapacitor.conf
}

_log() {
    echo "    $(date -u '+%Y-%m-%d %H:%M:%S') containerpilot: $@"
}

# ---------------------------------------------------
# parse arguments

# Get function list
funcs=($(declare -F -p | cut -d " " -f 3))

until
    if [ ! -z "$1" ]; then
        # check if the first arg is a function in this file, or use a default
        if [[ " ${funcs[@]} " =~ " $1 " ]]; then
            cmd=$1
            shift 1
        fi

        $cmd "$@"
        if [ $? == 127 ]; then
            help
        fi

        exit
    else
        health
    fi
do
    echo
done
